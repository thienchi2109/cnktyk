# =============================================================================
# CNKTYKLT PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file and configure for your production environment
# DO NOT commit actual production values to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production

# Production URL (replace with your actual domain)
NEXTAUTH_URL=https://cnktyklt.gov.vn

# Generate secure random secrets using: openssl rand -base64 32
NEXTAUTH_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS
AUTH_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS

# =============================================================================
# DATABASE CONFIGURATION (NEON PRODUCTION)
# =============================================================================
# Production Neon database connection
# Create a dedicated production database project in Neon
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require

# Neon pooled connection (recommended for serverless)
POSTGRES_URL=postgresql://USER:PASSWORD@HOST-pooler/DATABASE?sslmode=require
POSTGRES_PRISMA_URL=postgresql://USER:PASSWORD@HOST-pooler/DATABASE?sslmode=require&pgbouncer=true&connect_timeout=15

# Direct connection (for migrations only)
POSTGRES_URL_NON_POOLING=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require

# Neon project details
PGHOST=your-production-host.neon.tech
PGUSER=neondb_owner
PGPASSWORD=your_production_password
PGDATABASE=neondb
NEON_PROJECT_ID=your-production-project-id

# =============================================================================
# FILE STORAGE CONFIGURATION (CLOUDFLARE R2 PRODUCTION)
# =============================================================================
# Production R2 bucket configuration
CF_R2_ACCOUNT_ID=your_cloudflare_account_id
CF_R2_ACCESS_KEY_ID=your_r2_access_key_id
CF_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CF_R2_BUCKET_NAME=cnktyklt-production
CF_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com/cnktyklt-production
CF_R2_PUBLIC_URL=https://files.cnktyklt.gov.vn

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://cnktyklt.gov.vn,https://www.cnktyklt.gov.vn

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Session configuration
SESSION_MAX_AGE=28800
SESSION_UPDATE_AGE=3600

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Error tracking (optional - Sentry, LogRocket, etc.)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
CLOUDFLARE_ANALYTICS_TOKEN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in production
ENABLE_BULK_IMPORT=true
ENABLE_PDF_EXPORT=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUDIT_EXPORT=true

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=vi
SUPPORTED_LOCALES=vi,en

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress"
